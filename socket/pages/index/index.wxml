<!--pages/index/index.wxml-->

<swiper indicator-dots="true" interval="2000" circular="true" autoplay="true" indicator-color="rgba(101,101,101,1)" indicator-active-color="rgb(255,255,255)">
  <block wx:for="{{ imgUrls }}">
    <swiper-item>
      <image src="{{ item }}" class="slide-image" />
    </swiper-item>
  </block>
</swiper>

<view class="table-header" style="margin: 10px 0;background: #fff;box-shadow: 5px 1px 10px #ccc;">
  <view wx:for="{{ list }}" class="tab {{ currentTab == item.id ? 'active': '' }}" data-current="{{ item.id }}" bindtap="selected">{{ item.tab }}</view>
  <!-- <view class="tab {{ currentTab == 0 ? 'active': '' }}" data-current="0" bindtap="selected">点餐</view>
  <view class="tab {{ currentTab == 1 ? 'active': '' }}" data-current="1" bindtap="selected">商家</view> -->
</view>

<swiper current="{{ currentTab }}" class="swiper-box" duration="300" style="height:{{ winHeight - 31 }}px" bindchange="bindChange">

