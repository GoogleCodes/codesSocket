<swiper indicator-dots="true" interval="2000" style="height: 240px"
 circular="true" autoplay="true" indicator-color="rgba(101,101,101,1)" indicator-active-color="rgb(255,255,255)">
  <block wx:for="{{ imgUrls }}">
    <swiper-item>
      <image src="{{ item }}" class="slide-image" style='width: 100%;' />
    </swiper-item>
  </block>
</swiper>

<view class="table-header" style="margin: 10px 0 0;background: #fff;box-shadow: 5px 1px 10px #ccc;">
