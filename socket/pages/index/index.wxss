  position: relative;
  background: #fff;
  overflow: hidden;
  border-bottom: 1px solid #eee;
}

.recommend_scroll_x_box {
  white-space: nowrap;
  display: flex;
  width: 100%;
}

.recommend_scroll_x_box .tab {
  width: 80px;
  text-align: center;
  line-height: 40px;
  color: #595757;
  font-size: 30rpx;
  display: inline-block;
  background: #fff;
}

.recommend_scroll_x_box .icon-weibiaoti-9 {
  color: #7cb242;
  line-height: 40px;
  width: 50px;
}

.table-header .tab.active {
  height: 35px;
  color: #7cb242;
}

/* ul-view start */

.ul-view {
  overflow: hidden;
  height: 100%;
}

.ul-view .li-view {
  height: 70px;
  margin: 10px auto 0;
  background: #fff;
  border-radius: 5px;
  width: 95%;
  overflow: hidden;
  box-shadow: 1px 1px 10px #ccc;
  position: relative;
}

.ul-view .li-view .pic-iview {
  width: 24px;
  height: 39px;
  position: absolute;
  top: 3px;
  left: 11px;
}

.ul-view .li-view .pic-iview .iconfont {
  font-size: 50px;
  color: #666;
  text-align: center;
}

.ul-view .li-view .pic1 {
  width: 25px;
  height: 39px;
}

.ul-view .li-view .pic1 .icon-leddeng {
  font-size: 60px;
}

.ul-view .li-view .pic2 {
  width: 42px;
  height: 39px;
  top: 8px;
  left: 17px;
}

.ul-view .li-view .pic3 {
  width: 42px;
  height: 39px;
  top: 5px;
  left: 15px;
}

.ul-view .li-view .status-iview {
  margin: 13px 80px;
}

.ul-view .li-view .arrow-iview {
  width: 35.5px;
  height: 35.5px;
  margin: 16px 5px;
  text-align: center;
  line-height: 37.5px;
  color: #6aa84f;
  border: 1px solid #7cb242;
  border-radius: 100%;
  box-shadow: 0px 0px 10px #6aa84f;
}

/* ul-view end */

/* music-iview start */

.music-iview {
  position: absolute;
  bottom: 5px;
  left: 0px;
  right: 0px;
  margin: 0px auto;
  width: 55px;
  height: 55px;
  line-height: 55px;
  background: #fff;
  border-radius: 100%;
  background: #fff;
  text-align: center;
}

.music-iview .iconfont {
  font-size: 45px;
  color: #7cb242;
}

.music-iview  image {
  width: 25px;
  height: 40px;
  margin: 7px auto;
  display: block;
}

/* music-iview end */
