/* ul-view start */

.ul-view {
  overflow: hidden;
  height: 100%;
}

.ul-view .li-view {
  height: 70px;
  margin: 10px auto 0;
  background: #fff;
  border-radius: 5px;
  width: 95%;
  overflow: hidden;
  box-shadow: 1px 1px 10px #ccc;
}

.ul-view .li-view .pic-iview {
  width: 24px;
  height: 39px;
  margin: 15px 20px;
}

.ul-view .li-view .pic1 {
  width: 25px;
  height: 39px;
