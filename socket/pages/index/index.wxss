  height: 39px;
}

.ul-view .li-view .status-iview {
  margin: 13px 0px;
}

.ul-view .li-view .arrow-iview {
  width: 35.5px;
  height: 35.5px;
  margin: 16px 5px;
}

/* ul-view end */

/* music-iview start */

.music-iview {
  position: fixed;
  bottom: 25px;
  left: 0px;
  right: 0px;
  margin: 0px auto;
  width: 55px;
  height: 55px;
  background: #fff;
  border-radius: 100%;
  background: #fff;
  z-index: -1;
}

.music-iview  image {
  width: 25px;
  height: 40px;
  margin: 7px auto;
  display: block;
}

