/* pages/share/share.wxss */

page {
  background: #f7f7f7;
}

/* share-main start */

.share-main .share-title {
  margin: 0 20px;
  line-height: 50px;
}

.share-main .ul-share .li-share {
  height: 48px;
  line-height: 48px;
  background: #fff;
  position: relative;
}

.share-main .ul-share .li-share .p-share {
  margin: 0 0 0 12px;
}

.share-main .ul-share .li-share .cancel {
  width: 18px;
  height: 18px;
  position: absolute;
  right: 10px;
  top: 15px;
}

.share-main .addShare {
  width: 206px;
  height: 35px;
  color: #fff;
  margin: 50px auto 0;
  background: #8cc63f;
  border: 1px solid #8cc63f;
  line-height: 35px;
}

/* share-main end */

/* layer start */

.layer {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  position: fixed;
  top: 0px;
  left: 0px;
}

.layer-code {
  height: 300px;
  width: 95%;
  background: #fff;
  position: fixed;
  top: 0px;
  left: 0px;
  right: 0px;
  z-index: 11;
  margin: 0px auto;
}

.layer-code .share-code {
  width: 220px;
  height: 220px;
  margin: 32px auto 10px;
  border: 1px solid #6aa84f;
}

.share-code image {
  width: 160px;
  height: 160px;
  margin: 29px auto;
  display: block;
}

.layer-code .code-desc {
  text-align: center
}

/* layer end */
