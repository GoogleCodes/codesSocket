
<!-- <import src="../../../template/util/util.wxml" /> -->

<view class="page">
   <view class="page-bottom">
    <view class="page-content">
      <view class="wc" hover-class='wx-hover' hover-start-time='50' hover-stay-time='1000'>
        <view class="wc_list" bindtap='backLogin'>
          <view class="iconfont icon-user fl"></view>
          <view class="fl">退出登录</view>
        </view>
      </view>
    </view>
  </view> 

  <view class="page-top" style="{{ translate }}">
    <!--
     bindtouchmove="tap_drag" bindtouchend="tap_end" bindtouchstart="tap_start" 
    -->
    <view bindtap="tap_ch" class='icon-liebiao iconfont'></view>
    <!--smart.wxml-->
    <view class="pushMsgFm" hidden='{{ gizwitsVisible }}'>
      <!-- <view style="line-height: 30px;margin-top: 10px;">全部所需的时间是：{{ ins_i }}秒</view> -->
      <view style="line-height: 30px;margin-top: 10px;">视频解析所需的时间是：{{ ins_y }}秒</view>
      <view style="line-height: 30px;margin-top: 10px;">百度云识别的时间是：{{ ins_l }}秒</view>
      <form name='pushMsgFm' report-submit bindsubmit='orderSign'>
        <view class="bodyView">
          <view class="changeText">
            <label>Save</label>
          </view>
          <view class="changeInput" style="float:right;">
            <switch type="switch" checked="{{ switchButton }}" name="switchBtn" bindchange="chonseSocket" />
          </view>
        </view>
        <!-- <label class="openMessage">{{ openMessage }}</label> -->
        <view class="section">
          <picker mode="selector" range="{{ array }}" value="{{ index }}" bindchange="bindPickerChange">
            <view class="picker">当前选择：{{ array[index] }}</view>
          </picker>
        </view>
        <button class="confirm" form-type="submit" hidden='{{ true }}'>设置发送消息</button>
      </form>
    </view>

    <view class='listDevices'>
      <view class="placeChonse">请先选择设备：</view>
      <!-- 
          wx:if="{{ item.is_online == true }}"  {{ chonseDid == index ? 'active' : '' }} 
          hover-class="active" hover-start-time='10' hover-start-time='50000'
      -->
      <scroll-view scroll-y style="height:{{ eleHeight }}px;background:rgb(251, 249, 254);" scroll-top="10" enable-back-to-top="true">
        <view wx:for="{{ listDevices }}" class="scrollView">
          <view style="font-size: 14px;" bindtap='chonseDid' wx:if="{{ item.is_online == true }}" data-index="{{ index }}" data-did="{{ item.did }}" class="view_li {{ chonseDid == index ? 'active' : '' }}">
            <view style="margin-top: 4px;">did:{{ item.did }}</view>
            <view>mac:{{ item.mac }}</view>
          </view>
        </view>
      </scroll-view>
    </view>

    <!-- 录音按钮 bindtouchmove='mytouchmove' -->
    <view class="fixed-video">
      <button type="primary" bindtouchstart="startRecode" bindtouchend="endRecode" class="cxbtn" hover-class="primaryHover" hover-start-time="10" hover-stay-time="2000">按住录音</button>
    </view>
  </view>
</view>