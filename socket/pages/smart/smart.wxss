/* smart.wxss */

.bodyView {
  width: 100%;
  height: 35px;
  padding: 5px 0px;
}

.changeText {
  height: 35px;
  line-height: 35px;
  margin-left: 0.5rem;
  float: left;
}

.bodyView .changeInput {
  margin: 2px 10px;
}

.pushMsgFm {
  width: 95%;
  margin: 0px auto;
}

.pushMsgFm .pushFormView {
  margin: 10px 0px;
}

.fromInput {
  border: 1px solid #ccc;
  width: 100%;
  margin: 0px auto;
}

.fixed-video {
  position: fixed;
  bottom: 0px;
  border-top: 1px solid #eee;
  height: 50px;
  width: 100%;
  background: #fff;
}

.fixed-video button[type="primary"] {
  width: 90%;
  margin: 5px auto;
  height: 40px;
  line-height: 40px;
  background: #8fc31f;
  border: 0.01rem solid #eee;
  font-size: 14px;
  color: #fff;
}

.confirm {
  background-color: #0070c9;
  line-height: 1.5rem;
  padding: 0.3rem 1rem;
  background: -webkit-linear-gradient(#42a1ec, #0070c9);
  background: linear-gradient(#42a1ec, #0070c9);
  border: 0.1rem solid #07c;
  color: #fff;
  width: 25%;
}
