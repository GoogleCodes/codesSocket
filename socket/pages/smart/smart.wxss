

/* smart.wxss */

.bodyView {
    width: 100%;
    height: 35px;
    padding: 5px 0px;
}

.changeText {
    height: 35px;
    line-height: 35px;
    margin-left: 0.5rem;
    float: left;
    font-family: 'Segoe UI', "Helvetica Neue", Helvetica, Arial, sans-serif;
}

.bodyView .changeInput {
    margin: 2px 10px;
}

.pushMsgFm {
    width: 95%;
    margin: 0px auto;
}

.pushMsgFm .pushFormView {
    margin: 10px 0px;
}

.pushMsgFm .openMessage {
  margin-top: 20px;
}

.fromInput {
    border: 1px solid #ccc;
    width: 100%;
    margin: 0px auto;
}

.fixed-video {
    position: fixed;
    bottom: 0px;
    right: 0px;
    left: 0px;
    border-top: 1px solid #eee;
    height: 50px;
    width: 100%;
    background: #fff;
}

.fixed-video button[type="primary"] {
    width: 97%;
    margin: 8px auto;
    height: 35px;
    line-height: 35px;
    font-size: 14px;
    color: #fff;
}

.confirm {
    width: 100%;
    font-size: 34rpx;
    height: 35px;
    line-height: 35px;
    background: #1AAD19;
    color: #fff;
}

.board {
    overflow: hidden;
    border-bottom: 2rpx solid #26a5ff;
}

.cell {
    display: flex;
    margin: 20rpx;
}

.cell-hd {
    margin-left: 10rpx;
    color: #885a38;
}

.cell .cell-bd {
    flex: 1;
    position: relative;
}

.date {
    font-size: 30rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}


.section {
  margin: 10px 0px;
  height: 35px;
  line-height: 35px;
  background: rgb(251,249,254);
}

.section .picker {
  padding: 0px 2.5%;
}

/* 点击后出现的按钮样式 */
.primaryHover {
    transition: 0.5s;
    background: -webkit-linear-gradient(#37aaea,#117ed2);
    color: #fff;
}