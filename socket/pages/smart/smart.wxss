/* smart.wxss */

.bodyView {
  width: 100%;
  height: 35px;
  padding: 5px 0px;
  border-bottom: 1px solid #ccc;
}

.changeText {
  height: 35px;
  line-height: 35px;
  margin-left: 0.5rem;
  float: left;
}

.bodyView .changeInput {
  margin: 2px 10px;
}

/* content start */

.content {
  width: 90%;
  margin: 0rem 1rem;
}

.textInput {
  width: 100%;
  margin-top: 0.5rem;
  border: 1px solid #ccc;
}

.picker {
  background: #eee;
  padding: 0.5rem;
}

.toast {
  margin: 1rem;
}

/* content end */

.fixed-video {
  position: fixed;
  bottom: 0px;
  border-top: 1px solid #eee;
  height: 50px;
  width: 100%;
  background: #fff;
}

.fixed-video button[type="primary"] {
  width: 90%;
  margin: 5px auto;
  height: 40px;
  line-height: 40px;
  background: #8fc31f;
  border: 0.01rem solid #eee;
  font-size: 14px;
  color: #fff;
}
