/* pages/voice/voice.wxss */

.voice-control {
  height: 100%;
  overflow: hidden;
}

.voice-control .save-voice {
  margin: 0px 10px;
  position: absolute;
  bottom: 10px;
  width: 95%;
}

.voice-control .save-voice .save-input {
  border: 1px solid #ccc;
  border-right: none;
  width: 70%;
  padding-left: 5%;
  height: 38px;
  font-size: 12px;
  color: #b3b3b3;
}

.voice-control .save-voice .save-button {
  height: 40px;
  line-height: 40px;
  background: #7cb242;
  border: 1px solid #7cb242;
  border-radius: 0;
  color: #fff;
  width: 24%;
  font-size: 14px;
}

.voice-control .person {
  width: 35px;
  height: 35px;
  border-radius: 100%;
  background: #f2f2f2;
  text-align: center;
  line-height: 35px;
  font-size: 23px;
  color: rgb(0,187,210)
}

.voice-control .person image {
  margin: 5px auto;
  display: block;
}

.voice-control .voice-userInput {
  line-height: 40px;
  font-size: 14px;
  margin-right: 20px;
  color: #808080;
}

.voice-control .voice-microphone {
  width: 71px;
  height: 71px;
  border: 1px solid #b3b3b3;
  background: #fff;
  border-radius: 100%;
  position: absolute;
  bottom: 70px;
  left: 0px;
  right: 0px;
  text-align: center;
  line-height: 71px;
  margin: 0px auto;
}

.voice-control .hover-save-voice {
  border: 1px solid #7cb242;
  box-shadow: 1px 1px 10px #ccc;
}

.voice-control .voice-microphone .iconfont {
  font-size: 45px;
  color: #b3b3b3;
}

.voice-control .voice-microphone .hover-icon {
  color: #7cb242;
}

.voice-control .voice-microphone image {
  display: block;
  margin: 10px auto;
}

.voice-control .voice-ul {
  width: 100%;
  clear:  both;
  overflow: hidden;
  padding: 0 5%;
}

.voice-control .voice-ul .voice-li .voice-li-icon {
  width: 40px;
  height: 40px;
  background: #f2f2f2;
  border-radius: 100%;
}

.voice-control .voice-ul .voice-li .voice-li-icon .icon-icon-test {
  text-align: center;
  line-height: 40px;
  color: #7cb242;
  font-size: 30px;
  display: block;
}

.voice-control .voice-ul .voice-li {
  line-height: 2.6rem;
  height: 2.6rem;
  color: #808080;
  width: 100%;
  clear: both;
  margin-bottom: 20px;
}

.voice-control .voice-ul .voice-li .voice-li-icon image {
  margin: 5px auto;
}

.voice-control .voice-ul .voice-li .tab {
  line-height: 23px;
}
