/* pages/me/me.wxss */

page {
  background: #f7f7f7;
}

.me_pages {
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.me-iview {
  margin-top: 10px;
}

.me-iview .me-li-iview {
  width: 87%;
  height: 40px;
  line-height: 40px;
  background: #fff;
  margin: 10px 0;
  padding: 0 5% 0 8%;
  position: relative;
  color: #666;
  border: 1px solid #e6e6e6;
  border-left: none;
  border-right:  none;
}

.me-iview .me-li-iview .small-icon {
  color: #8cc63f;
  font-size: 20px;
  width: 1.3rem;
  display: block;
  float: left;
  margin-right: 10px;
}

.me-iview .me-li-iview .icon-weibiaoti-12 {
  font-size: 1.4rem;
}

.me-iview .me-li-iview .icon-youbian {
  position: absolute;
  right: 10px;
  top: 3px;
}