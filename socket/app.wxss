}

/* ul-footer start */
.ul-footer {
  position: fixed;
  bottom: 0px;
  left: 0px;
  width: 100%;
  height: 45px;
  border-top: 1px solid #bbb;
  background: #f8f8f8;
}

.ul-footer .li-footer {
  width: 25%;
  margin-top: 3px;
  color: #6aa84f;
  text-align: center;
}

.ul-footer .li-footer .iconfont {
  font-size: 22px;
}

.ul-footer .li-footer .li-footer-text {
  font-size: 12px;
}

