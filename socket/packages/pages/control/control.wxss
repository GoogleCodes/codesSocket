/* pages/control/control.wxss */


.control-body {
  padding: 0px 5% 10%;
}

.control-body .control-title {
  line-height: 40px;
  font-size: .9rem;
}

.control-ul .control-li {
  border-bottom: 1px dashed #b3b3b3;
  overflow: hidden;
  height: 50px;
  line-height: 50px;
  font-size: 14px;
}

.control-ul .control-li:last-child {
  border: none;
}

.control-ul .control-li .icon-weibiaoti- {
  font-size: 25px;
  margin: 0 10px;
}

.control-ul .control-li .li-main {
  font-size: 14px;
  float: left;
  margin-top: 5px;
}

.control-ul .control-li .li-main .li-main-desc {
  height: 20px;
  line-height: 20px;
}