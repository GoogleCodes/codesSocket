/* pages/addarea/addarea.wxss */

.area-view {
  margin: 0px 10px;
}

.area-view .section__title {
  line-height: 40px;
  font-size: 16px;
}

.area-view .search-input {
  width: 85%; 
  padding-left: 10px;
  height: 40px;
  overflow: hidden;
  margin: 10px 0;
  font-size: 16px;
  border: 1px solid #f2f2f2;
}

.area-view .icon-weibiaoti-1 {
  line-height: 40px;
  color: #cd4000;
  position: relative;
  top: 11px;
  font-size: 1.5rem;
}

.area-view .saveData {
  clear: both;
  margin-top: 20px;
  width: 100%;
  height: 40px;
  color: #fff;
  line-height: 40px;
  font-size: 14px;
  background: #8cc63f;
}